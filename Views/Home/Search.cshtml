@{
    ViewData["Title"] = "Search Results Page";
}


    <a href="/logout"style="margin-left: 10px;" class="btn btn-primary pull-right">Logout</a>
    <a href="/dashboard" style="margin-left: 10px;" class="btn btn-primary pull-right">Dashboard</a>
    
<h1>Your search results:</h1>


    

<hr>

<ul>
    <li style="font-size: 18px">Name:<a href="/user/@ViewBag.friend.userId"> @ViewBag.friend.first_name @ViewBag.friend.last_name</a> </li>
    <li style="font-size: 16px">Username: @ViewBag.friend.username</li>
</ul> 
       

<hr>

@if(ViewBag.friend != ViewBag.currentUser && ViewBag.friends == false)
{
<form asp-action="friend" asp-controller="Home" method="post">
        <input type="hidden" value=@ViewBag.friend.userId name="friendBId">
        <input type="hidden" value=@ViewBag.currentUser.userId name="friendAId">
        <input class="btn btn-link" type="submit" value="Add friend">
</form>
} else if(ViewBag.friend == ViewBag.currentUser){

} else {
<p class="text-danger">You are already friends with @ViewBag.friend.first_name @ViewBag.friend.last_name!</p>
}